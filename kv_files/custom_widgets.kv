#:kivy 1.11.1

# KV Representations for my custom widget set

<CButton@Button>:
    idt: 'Button'

<CScreen@Screen>:
    idt: 'Screen'

<CFlay@FloatLayout>:
    idt: 'FloatLayout'

<CLabel@Label>:
    idt: 'Label'

<CInput@TextInput>:
    idt: 'TextInput'

<CSpinner@Spinner>:
    idt: 'Spinner'

<CForm@CFlay>:
    idn: 'common_form'
    id: cform
    canvas:
        Color:
            rgba: 1, 0, 0, .1
        Rectangle:
            size: self.size
            pos: self.pos
    CLabel:
        size_hint: .2, .1
        pos_hint: {'center_x':.2, 'center_y':.85}
        text: "Station ID:"
        color: hex("#4f545c")
        font_size: root.width/35
    CSpinner:
        idn: 's_id'
        id: s_id
        size_hint: .25, .25
        pos_hint: {'center_x':.2, 'center_y':.65}
        font_size: root.width/35
        text: 'Station ID'
        values: app.get_stations()
    DatePicker:
        size_hint: 1, .5
        pos_hint: {'center_x':.5, 'center_y':.25}
    CLabel:
        size_hint: .2, .25
        pos_hint: {'center_x':.5, 'center_y':.85}
        text: "Time Type:"
        color: hex("#4f545c")
        font_size: root.width/35
    CSpinner:
        id: time_type
        idn: 't_type'
        size_hint: .25, .25
        pos_hint: {'center_x':.5, 'center_y':.65}
        text: 'Time Type'
        values: ('Daily', 'Monthly', 'Yearly')
        font_size: root.width/35


<DatePicker@CFlay>:
    idt: 'DatePicker'
    id: datepicker
    CLabel:
        text: 'Day'
        size_hint: .3, .2
        pos_hint: {'center_x':.5, 'center_y':.8}
        font_size: root.width/35
        color: hex("#4f545c")
    CSpinner:
        idn: 'day_spinner'
        id: day_spinner
        text: 'Day'
        values: self.get_range(1,31)
        size_hint: .3, .6
        pos_hint: {'center_x':.5, 'center_y':.3}
        font_size: root.width / 35
        on_text: datepicker.day = self.text
    CLabel:
        text: 'Month'
        size_hint: .3, .2
        pos_hint: {'center_x':.2, 'center_y':.8}
        font_size: root.width/35
        color: hex("#4f545c")
    CSpinner:
        idn: 'month_spinner'
        id: month_spinner
        text: 'Month'
        values: self.get_range(1,12)
        size_hint: .3, .6
        pos_hint: {'center_x':.2, 'center_y':.3}
        font_size: root.width / 35
        on_text: datepicker.month = self.text
    CLabel:
        text: 'Year'
        size_hint: .3, .2
        pos_hint: {'center_x':.8, 'center_y':.8}
        font_size: root.width/35
        color: hex("#4f545c")
    CSpinner:
        idn: 'year_spinner'
        id: year_spinner
        text: 'Year'
        values: self.get_range(1900,2020)
        size_hint: .3, .6
        pos_hint: {'center_x':.8, 'center_y':.3}
        font_size: root.width / 35
        on_text: datepicker.year = self.text
    
<PForm@CFlay>:
    CInput:
        idn: 'p_lvl'
        id: p_lvl
        size_hint: .6, .09
        pos_hint: {'center_x':.5, 'center_y':.4}
        font_size: root.width/30
        multiline: False
        password: False
        write_tab: False



    
