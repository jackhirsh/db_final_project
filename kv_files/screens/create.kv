#:kivy 1.11.1
#:import hex kivy.utils.get_color_from_hex

<PForm@CFlay>:
    idn: 'pform'
    id: pform

<WForm@CFlay>:
    idn: 'wform'
    id: pform

<TForm@CFlay>:
    idn: 'tform'
    id: pform

<CreateScreen@CScreen>:
    idn: 'create_screen'
    id: create_screen
    canvas:
        Color:
            rgba: hex("#d9d9d9")
        Rectangle:
            size: self.size
            pos: self.pos
    CFlay:
        id: create_layout
        CLabel:
            text: "Selected Reading Type:"
            size_hint: .5, .1
            pos_hint: {'center_x':.3, 'center_y':.9}
            color: hex("#4f545c")
            font_size: root.width / 35
        CSpinner:
            size_hint: .25, .08
            pos_hint: {'center_x':.6, 'center_y':.9}
            text: 'Reading Type'
            values: 'Wind', 'Precipitation', 'Temperature'
            on_text: create_screen.set_form_type(self.text)
            font_size: root.width / 35
        CForm:
            id: cform
            size_hint: 1, .3
            pos_hint: {'center_x':.5, 'center_y':.7}

        CButton:
            id: submit
            text: 'Submit'
            font_size: root.width/35
            on_release: create_screen.submit_command()
            size_hint: .5, .10
            pos_hint: {'center_x':.5, 'center_y':.05}

        CButton:
            id: back
            text: 'Back'
            font_size: root.width/40
            size_hint: .15, .08
            pos_hint: {'center_x':.075, 'center_y':.9}
            on_release: create_screen.callbacks['switch']('main_menu')