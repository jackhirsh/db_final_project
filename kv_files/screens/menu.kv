#:kivy 1.11.1
#:import hex kivy.utils.get_color_from_hex

<MainMenuScreen@CScreen>:
    idn: 'mm_screen'
    id: mm_screen
    canvas:
        Color:
            rgba: hex("#d9d9d9")
        Rectangle:
            size: self.size
            pos: self.pos
    CFlay:
        CLabel:
            text: "Data Management"
            font_size: ((root.width+root.height)/20)
            size_hint: 1, .3
            pos_hint: {'center_x':.5, 'center_y':.8}
            color: hex("#4f545c")
        CButton:
            idn: 'create_data'
            id: create_button
            size_hint: .8, .2
            pos_hint: {'center_x':.5, 'center_y':.6}
            text: 'Enter Data'
            font_size: ((root.width+root.height)/60)
            on_release: mm_screen.callbacks['switch']('create')
        CButton:
            idn: 'edit_data'
            id: import_button
            size_hint: .8, .2
            pos_hint: {'center_x':.5, 'center_y':.4}
            text: 'Edit Data'
            font_size: ((root.width+root.height)/60)
            on_release: mm_screen.callbacks['switch']('edit')